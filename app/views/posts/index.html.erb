<p id="notice"><%= notice %></p>


<h1>Liste des articles</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Cat√©gorie</th>
      <th>Image</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= post.category_id %></td>
      <% if post.image_url.attached? %>
      <td><%= image_tag(post.image_url, width: "100%") %></td>
      <% else %>
      <td>No image</td>
      <% end %>
      <td class="actions"><%= link_to 'Voir', post, class: "btn" %></td>
      <td class="actions"><%= link_to 'Editer', edit_post_path(post), class: "btn_edit" %></td>
      <td class="actions"><%= link_to 'Supprimer', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn_delete" %></td>
    </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: 'btn' %>

</div>
